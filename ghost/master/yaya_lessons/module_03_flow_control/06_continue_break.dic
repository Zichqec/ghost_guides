/******************************************************************

OnExample.M3.L6.StopAt10
{
	_display = ""
	_i = 0
	while 1 //This loop will run indefinitely
	{
		_display += _i
		
		if _i >= 9
		{
			break //This will cause the loop to end after it has run 10 times
		}
		_i++
	}
	_display
}

