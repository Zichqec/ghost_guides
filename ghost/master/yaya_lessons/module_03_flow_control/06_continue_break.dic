/******************************************************************

OnExample.M3.L6.NestedLoops
{
	_display = ""
	for _i = 0; _i < 3; _i++
	{
		_j = 0
		while 1
		{
			_display += _i + ":" + _j + ", " //Formats the string like "_i:_j, "
			_j++
			if _j >= 3
			{
				break
			}
		}
	}
	_display
}

