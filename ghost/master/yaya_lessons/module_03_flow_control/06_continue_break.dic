OnExample.M3.L6.OutputOdds
{
	_display = ""
	_i = 0
	while _i < 10
	{
		_i++ //This incrementor has to be above the continue statement, otherwise it would be skipped and create an infinite loop
		if _i % 2 == 0 //If this is an even number
		{
			continue
		}
		else
		{
			_display += _i
		}
	}
	_display
}

